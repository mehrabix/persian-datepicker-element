{
  "name": "shadnext-persian-components",
  "private": true,
  "version": "1.0.0",
  "description": "Modern Persian (Shamsi) UI components with shadcn-like styling",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "build:datepicker": "pnpm --filter @shadnext/persian-datepicker-element run build",
    "build:timepicker": "pnpm --filter @shadnext/persian-timepicker-element run build",
    "build:cli": "pnpm --filter @shadnext/cli run build",
    "clean": "rimraf packages/*/dist",
    "test": "jest",
    "dev": "pnpm --filter @shadnext/persian-datepicker-element run dev",
    "serve": "pnpm exec serve",
    "publish": "lerna publish --no-private",
    "version": "lerna version",
    "react-convert": "node scripts/convert-to-react.js"
  },
  "keywords": [
    "jalali",
    "shamsi",
    "persian",
    "date",
    "datepicker",
    "calendar",
    "webcomponent",
    "custom-element",
    "rtl",
    "persian-calendar",
    "web-component",
    "shadow-dom"
  ],
  "author": "Ahmad Mehrabi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mehrabix/persian-components.git"
  },
  "homepage": "https://github.com/mehrabix/persian-components#readme",
  "bugs": {
    "url": "https://github.com/mehrabix/persian-components/issues"
  },
  "devDependencies": {
    "@rspack/cli": "^1.2.8",
    "@rspack/core": "^1.2.8",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^29.5.14",
    "css-loader": "^7.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lerna": "^8.1.2",
    "rimraf": "^5.0.5",
    "serve": "^14.2.4",
    "style-loader": "^4.0.0",
    "terser": "^5.30.1",
    "ts-jest": "^29.2.6",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2"
  }
}