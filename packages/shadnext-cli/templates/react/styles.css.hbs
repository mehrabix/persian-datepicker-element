/**
 * Styles for the {{componentName}} component
 * Generated from the {{originalName}} web component
 */

:root {
  --primary-color: #3b82f6;
  --background-color: #ffffff;
  --text-color: #0f172a;
  --border-color: #e2e8f0;
  --hover-color: #f1f5f9;
  --header-text-color: #ffffff;
  --weekday-color: #64748b;
  --other-month-color: #94a3b8;
  --today-border-color: var(--primary-color);
  --border-radius: 0.375rem;
}

.shadnext-{{componentName}}-container {
  position: relative;
  width: 100%;
  font-family: 'Vazirmatn', 'Tahoma', Arial, sans-serif;
}

.shadnext-{{componentName}}-input {
  width: 100%;
  padding: 8px 12px;
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius);
  font-size: 0.875rem;
  line-height: 1.25rem;
  outline: none;
  transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
}

.shadnext-{{componentName}}-input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 1px var(--primary-color);
}

.shadnext-calendar-popup {
  position: absolute;
  top: calc(100% + 4px);
  right: 0;
  width: 300px;
  background: var(--background-color);
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  z-index: 10;
  overflow: hidden;
}

.shadnext-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px;
  background: var(--primary-color);
  color: var(--header-text-color);
}

.shadnext-header button {
  background: none;
  border: none;
  color: var(--header-text-color);
  font-size: 16px;
  cursor: pointer;
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.shadnext-header button:hover {
  background: rgba(255, 255, 255, 0.2);
}

.shadnext-calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  padding: 8px;
}

.shadnext-weekday {
  text-align: center;
  font-size: 0.75rem;
  color: var(--weekday-color);
  padding: 6px 0;
}

.shadnext-day {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 36px;
  font-size: 0.875rem;
  cursor: pointer;
  border-radius: 50%;
  margin: 2px;
}

.shadnext-day:hover {
  background: var(--hover-color);
}

.shadnext-day.selected {
  background: var(--primary-color);
  color: var(--header-text-color);
}

.shadnext-day.current-month {
  color: var(--text-color);
}

.shadnext-day.other-month {
  color: var(--other-month-color);
}

.shadnext-day.today {
  font-weight: bold;
  border: 1px solid var(--today-border-color);
} 