{
  "name": "react-persian-datepicker-element",
  "version": "1.1.8",
  "description": "React wrapper for Persian Datepicker Web Component - A beautiful and fully customizable Jalali date picker",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format cjs,esm",
    "build:dts": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "dev": "tsup src/index.tsx --format cjs,esm --watch",
    "clean": "rimraf dist",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "test": "jest",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mehrabix/persian-datepicker-element",
    "directory": "packages/react"
  },
  "homepage": "https://github.com/mehrabix/persian-datepicker-element/tree/main/packages/react",
  "keywords": [
    "react",
    "persian",
    "jalali",
    "shamsi",
    "datepicker",
    "calendar",
    "persian-datepicker",
    "web-component",
    "react-component",
    "date-picker",
    "dark-mode",
    "rtl",
    "right-to-left"
  ],
  "author": "Ahmad Mehrabi",
  "license": "MIT",
  "dependencies": {
    "persian-datepicker-element": "1.1.17"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.6",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.3.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  }
}
